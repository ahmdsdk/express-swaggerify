{
  "name": "basic-express-app",
  "version": "1.0.0",
  "description": "Example Express.js app with swaggerify",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "docs:generate": "swaggerify generate --routes-dir ./src/routes --controllers-dir ./src/controllers --output ./src/swagger-docs.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "swaggerify": "file:../.."
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
